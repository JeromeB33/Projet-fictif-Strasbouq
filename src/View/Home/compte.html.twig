{% block content %}

    <div>
    <h1>Mon compte</h1>
        <div>
            <h2>Mes informations</h2>
                <p>Nom : {{ session.user.lastname }} {{ session.user.firstname }}</p>
                <p>Email : {{ session.user.email }}</p>
                <p>Phone number : 0{{ session.user.phone }}</p>
                <a href="/customer/edit/{{ session.user.id }}"><button>Modifier mes informations</button></a>
                
        </div>
        <div>
            <h2>Mes Bouquets sauvegard√©s</h2>
            
            <ul>
                {% for bouquet in bouquets %}
