<form method="post">
	<input type="hidden" value="{{ customer.id }}" name="id">    
    <div>
        <label for="firstname">Prénom</label><br>
        <input type="text" value="{{ customer.firstname }}" name="firstname">
    </div>
    <div>
        <label for="lastname">Nom</label><br>
        <input type="text" value="{{ customer.lastname }}" name="lastname">
    </div>
    <div>
        <label for="email">Email</label><br>
        <input type="email" value="{{ customer.email }}" name="email">
    </div>
    <div>
        <label for="phone">Numéro de téléphone</label><br>
        <input type="tel" value="{{ customer.phone }}" name="phone">
    </div>
    <div>
        <label for="password">Mot de passe</label><br>
        <input type="text" value="{{ customer.password }}" name="password">
    </div>

	<input type="submit" value="Valider">
</form>
